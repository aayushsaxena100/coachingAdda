<html>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
  <link href="/css/style.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="/css/font-awesome.min.css">
  <link rel="stylesheet" href="/css/instituteHomeCss.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  
<head>
  <title>Home</title>
</head>
<body>

  <div class="navbar navbar-fixed-top">
    <div class="container-fluid">
        <ul class="navbar-right" id="ulNav">
            <li><a href="#" data-toggle="modal" data-target="#profileInstitute"><i class="fa fa-cogs" aria-hidden="true"></i>Profile</a></li>
            <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
        </ul>
    </div>
  </div>

  <div id="instituteFunc">
    <div class="container">
      <p class="lead" style="color: #515151; font-size: 40px">Here are some of the options you may want to use.</p><br><br>
      <div class="row">
        <div class="col-sm-4" data-toggle="modal" data-target="#addBranch">
          <i class="fa fa-plus" aria-hidden="true"></i><br><br>
          <p class="lead">Add a newly created branch</p>
        </div>
        <div class="col-sm-4" data-toggle="modal" data-target="#editBranch">
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i><br><br>
          <p class="lead">Edit one of your branches</p>
        </div>
        <div class="col-sm-4" data-toggle="modal" data-target="#deleteBranch" style="border-right: 0px">
          <i class="fa fa-trash" aria-hidden="true"></i><br><br>
          <p class="lead">Delete any of the non-operational branch</p>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="addBranch" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Add Branch</h4>
        </div>
        <div class="modal-body">
          <form action="/addBranch" method="post" onsubmit="alert('Branch added successfully!');">
            <div class="form-group">
              <label>Address </label>
              <input type="text" class="form-control" name="address" required>
            </div>
            <div class="form-group">
              <label>City </label>
              <input type="text" class="form-control" name="city" required>
            </div>
            <div class="form-group">
              <label>Contact No. </label>
              <input type="text" class="form-control" name="contact" required>
            </div>
            <div class="form-group">
              <label>Email </label>
              <input type="email" class="form-control" name="email" required>
            </div>
            <div class="form-group">
              <label>Location </label>
              <input type="text" class="form-control" name="location" required>
            </div>
            <div class="form-group">
              <label>Percent Selection </label>
              <input type="text" class="form-control" name="percent" required>
            </div>
            <br>
            <div class="modal-footer">
              <button type="submit" class="btn btn-default">Submit</button>
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="editBranch" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Edit Branch</h4>
        </div>
        <div class="modal-body">
          <form action="/editBranch" method="post" onsubmit="alert('Branch edited successfully!');">
          	<select id="selectOne" name="type">
          	  <option selected>What to edit
        			  <option value="address">Address</option>
        			  <option value="contact">Contact No.</option>
        			  <option value="location">Location</option>
        			  <option value="city">City</option>
                <option value="percent">Percentage Selection</option>
			      </select>
			<div class="form-group">
              <label>City </label>
              <input type="text" class="form-control" name="b_city" required>
            </div>
            <div class="form-group">
              <label>Location </label>
              <input type="text" class="form-control" name="b_location" required>
            </div>
            <div class="form-group">
              <label>Field </label>
              <input type="text" class="form-control" name="field" required>
            </div>
            <br>
            <div class="modal-footer">
              <button type="submit" class="btn btn-default">Edit</button>
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="deleteBranch" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Delete Branch</h4>
        </div>
        <div class="modal-body">
          <form action="/deleteBranch" method="post"  onsubmit="alert('Branch deleted successfully!');">
            <div class="form-group">
              <label>City </label>
              <input type="text" class="form-control" name="d_city" required>
            </div>
            <div class="form-group">
              <label>Location </label>
              <input type="text" class="form-control" name="d_location" required>
            </div>
            <br>
            <div class="modal-footer">
              <button type="submit" class="btn btn-default">Delete</button>
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="profileInstitute" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Edit Your Profile</h4>
        </div>
        <div class="modal-body">
          <form action="/profileInstitute" method="post"  onsubmit="alert('Profile Updated Successfully!');">
            <select id="selectOne" name="type" class="form-control" id="location" name="location"  style="width: 20%" required>
              <option selected>What to edit?
                <option value="contact">Contact No.</option>
                <option value="hq">Headquaters Address</option>
                <option value="email">Email</option>
                <option value="password">Password</option>
            </select><br>
            <div class="form-group">
              <label>Field </label>
              <input type="text" class="form-control" name="field" required>
            </div>
            <br>
            <div class="modal-footer">
              <button type="submit" class="btn btn-default">Edit</button>
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
